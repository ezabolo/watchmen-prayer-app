# Prayer Watchman Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=5000

# Database (Use your existing Neon database)
DATABASE_URL=postgresql://username:password@hostname:5432/database

# Session Security
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random

# Stripe Payment Integration (Live Keys)
STRIPE_SECRET_KEY=sk_live_...
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# PayPal Payment Integration (Live Keys)
PAYPAL_CLIENT_ID=your-live-paypal-client-id
PAYPAL_CLIENT_SECRET=your-live-paypal-client-secret
VITE_PAYPAL_CLIENT_ID=your-live-paypal-client-id

# Database Connection Details (if using separate RDS)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your-password
PGDATABASE=prayer_watchman

# Optional: Custom Domain
DOMAIN=yourdomain.com